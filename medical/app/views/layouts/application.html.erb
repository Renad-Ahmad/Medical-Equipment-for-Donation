<!DOCTYPE html>
<html>
  <head>
    <title>Medical</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p> 

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" >Medical Equipments Donation</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

              <li class="nav-item active">
                  <a class="nav-link" >  <%= link_to 'Home', root_path %> <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle"  id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      More
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" > <%= link_to 'Donation', equipments_path %></a>
                    <a class="dropdown-item" > <%= link_to 'Support Hospitals and Healthcare', hospitals_path %></a>
                  </div>
               </li>
            </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button  type="button" class="btn btn-outline-primary" type="submit">Search</button>
        </form>
          </div>
      </nav>

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <% if user_signed_in? %>  
            <button type="button" class="btn btn-outline-primary"  >
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
            </button>
           <%else%>
            <button type="button" class="btn btn-outline-primary"  >
              <%= link_to "Sign Up", new_user_registration_path  %>  
            </button> 
            <button type="button" class="btn btn-outline-primary"  >
              <%= link_to "Sign in ",   new_user_session_path %>
            </button> 
          <%end%>
        </ol>
      </nav>
      
    <%= yield %>
  </body>
</html>

















