<h1 class="mt-4 mb-4 text-center"> All the hospital:</h1>
<div class="col-md-12 text-center">
<%= link_to "Add an hospital", new_hospital_path, { :class => "btn btn-danger rounded-pill" } %> 
<%= link_to "Sign Up", new_user_registration_path , { :class => "btn btn-danger rounded-pill" } %>   
<%= link_to "Sign in ", new_hospital_path, { :class => "btn btn-danger rounded-pill" } %>     
</div>
<table class="table table-striped table-dark table-borderless table-hover text-center">
  <thead class="thead-dark">
    <tr>
        <th>Hospital Name:</th>
        <th>Equipment Name:</th>
        <th>quantitity:</th>
        <th>phone:</th>
    </tr>
  </thead> 
  <tbody>
    <% @hospitals.each do |hospital| %>
    
            <tr>
            <td><%= hospital.hospital_name%></td>
            <td><%= hospital.equipment_name %></td>
            <td><%= hospital.quantitity%></td>
            <td><%= hospital.phone %></td>
            <td><a class="btn btn-danger rounded-pill" data-confirm="Are you sure you want to delete <%= hospital.hospital_name %>?" data-method="delete" href="/hospitals/<%= hospital.id %>" rel="nofollow"><i class="large material-icons">Delete Hospital</i>
        </td>
        </tr>
        <% end %>
 </tbody>
</table>



